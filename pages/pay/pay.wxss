.content{
  background: #ededed;
  height: 100vh;
}
.card{
  width:95%;
  margin-left: 2.5%;
  padding-top: 35rpx;
  margin-bottom: 35rpx;
  position: relative;
  overflow: hidden;
  border-radius: 4px;
}
.cardBg{
  width: 100%;
  display: block;
}
.cardNum{
  position: absolute;
  top:60rpx;
  text-align: center;
  margin:auto;
  left:0;
  right:0;
  font-size: 48rpx;
  color:#FFF;
}
.text{
  position: absolute;
  top:120rpx;
  text-align: center;
  margin:auto;
  left:0;
  right:0;
  font-size: 28rpx;
  color:#FFF;
}
.cover{
  position: absolute;
  width: 100%;
  bottom:0;
  background: rgba(0,0,0,0.2);
  height: 74rpx;
  z-index: 6;
}

.info{
  line-height: 74rpx;
  position: absolute;
  width: 100%;
  bottom:0;
  display: flex; 
  z-index: 7;
}
.info view{
  flex:1;
  text-align: center;
  color:#FFF;
}
.line{
  position: absolute;
  height: 33rpx;
  width: 1px;
  background: #fff;
  left:33%;
  bottom:0;
  top:0;
  margin:auto;
}
.renwu{
  width:90%;
  margin-left: 2.5%;
  background: #FFF;
  border-radius: 4px;
  padding:5rpx 2.5%;
  margin-right: 2.5%;
  margin-bottom: 35rpx;
}
.title{
  text-align: center;
  font-weight: 550;
}
.item{
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin:50rpx auto;
  font-size: 28rpx;
}
.item image{
  width: 80rpx;
  display: block;
  margin-right: 24rpx;
}
.flex{
  display: flex; 
  align-items: center;
}
.name{
  font-size: 28rpx;
}
.des{
  font-size: 24rpx;
  opacity: 0.5;
}
.button{
  width:120rpx;
  height: 50rpx;
  text-align: center;
  line-height: 50rpx;
  color:#FFF;
  font-size: 26rpx;
  border-radius: 40rpx;
  background:linear-gradient(to right,rgb(254,46,41),rgb(255,128,26));
}
.rule{
  width: 626rpx;
  height: 426rpx;
  position: absolute;
  left:0;
  margin:auto;
  bottom:0;
  right:0;
  top:0;
  background: #fff;
  z-index: 20;
  border-radius: 10rpx;
  overflow: hidden;
}
.ruleTitle{
  font-size: 34rpx; 
  margin:50rpx 0px;
  text-align: center;
  font-weight: 550;
}
.cover2{
  width: 100%;
  height: 100%;
  position: fixed;
  left:0;
  margin:auto;
  bottom:0;
  right:0;
  top:0;
  background: rgba(0,0,0,0.6);
  z-index: 19;
}
.ruleText{
  margin-left: 50rpx;
  font-size: 30rpx;
}
.ruleButton{
  position: absolute;
  bottom:0;
  width: 100%;
  text-align: center;
  line-height: 100rpx;
  background: #eeeeee;
  border-top: 1px solid rgba(0,0,0,0.1);
}