 .top{
   background: url(http://res.hodanet.com/upload/sy/20210019/14/1611038291390.png) no-repeat;
   width:100%;
   height: 80vw;
   background-size: 100% 100%;
 }
 .text{
   display: flex;
   font-size: 46rpx;
   color:#FFF;
   justify-content: space-between;
   align-items: center;
   width: 590rpx;
   margin:0rpx auto;
   padding-top:120rpx;
 }
 .item{
   background: url(http://res.hodanet.com/upload/sy/20210019/14/1611038564508.png) no-repeat;
   background-size: 100% 100%;
   width:80rpx;
   height: 120rpx;
   background-size: 100% 100%;
   display: flex;
   align-items: center;
   justify-content: center;
   font-size: 46rpx;
   color:#248efe;
 }
 .button{
   display: flex;
   width: 630rpx;
   line-height: 100rpx;
   text-align: center;
   align-items: center;
   background: #ff7a1b;
   border-radius: 40rpx;
   margin:100rpx auto;
   justify-content: center;
   color:rgba(255,255,255,0.8);
   font-size: 30rpx;
 }
 .button image{
   display: block;
   margin:0 10rpx;
 }
 .checkBlock{
   width:712rpx;
   background: #FFF;
   position: absolute;
   top:70vw;
   padding:50rpx 0rpx;
   margin:auto;
   left:0;
   right:0;
   border-radius: 10rpx;
 }
 .flex{
   width: 95%;
   padding:0 2.5%;
  display: flex;
  flex-wrap: wrap;
 }
 .checkItem{
   width:24%; 
   background: #efefef;
   border-radius: 10rpx;
   text-align: center;
   font-size: 24rpx;
   color:#000; 
   margin:0.5%;
   padding-top:20rpx;
   padding-bottom:20rpx;
 }
 .checkItem image{
   display: block;
   margin:8rpx auto;
 }
 .checkItem view{
   width: 100%;
 }
 .bigGift{
   width:336rpx;
   height: 185rpx;
   display: flex;
   justify-content: center;
   align-items: center;
   background: #efefef;
   border-radius: 10rpx; 
   font-size:24rpx;
   text-align: center;
 }
 .bigGift image{
   display: block;
   margin-left: 50rpx;
 }
 .button2{
  width:450rpx;
  height: 90rpx;
  text-align: center;
  line-height: 90rpx;
  color:#FFF;
  font-size: 26rpx;
  border-radius: 40rpx;
  background:linear-gradient(to right,rgb(254,46,41),rgb(255,128,26));
  margin:20rpx auto 0px auto; 
 }
 .checked{
  background: #fa982b;
  color:#FFF;
}
.alert{
  position: absolute;
  width: 80%;
  background: #ffffff;
  border-radius: 10px;
  left:10%; 
  text-align: center;
  font-size:34rpx;
  z-index: 11;
}
.cover{
  width:100%;
  height: 100%;
  background:rgba(0,0,0,0.6);
  z-index: 10;
  position: absolute;
  left:0;
  top:0;
}
.alert image{
  position: absolute;
  top:-80rpx;
  width:50rpx;
  height: 50rpx;
  right:-30rpx;
  z-index: 999;
}