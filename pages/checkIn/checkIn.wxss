 .top{
   background: url(http://res.hodanet.com/upload/sy/20210019/14/1611038291390.png) no-repeat;
   width:100%;
   height: 80vw;
   background-size: 100% 100%;
 }
 .text{
   display: flex;
   font-size: 46rpx;
   color:#FFF;
   justify-content: space-between;
   align-items: center;
   width: 590rpx;
   margin:0rpx auto;
   padding-top:120rpx;
 }
 .item{
   background: url(http://res.hodanet.com/upload/sy/20210019/14/1611038564508.png) no-repeat;
   background-size: 100% 100%;
   width:80rpx;
   height: 120rpx;
   background-size: 100% 100%;
   display: flex;
   align-items: center;
   justify-content: center;
   font-size: 46rpx;
   color:#248efe;
 }
 .button{
   display: flex;
   width: 630rpx;
   line-height: 100rpx;
   text-align: center;
   align-items: center;
   background: #ff7a1b;
   border-radius: 40rpx;
   margin:100rpx auto;
   justify-content: center;
   color:rgba(255,255,255,0.8);
   font-size: 30rpx;
 }
 .button image{
   display: block;
   margin:0 10rpx;
 }
 .checkBlock{
   width:712rpx;
   background: #FFF;
   position: absolute;
   top:70vw;
   padding:50rpx 0rpx;
   margin:auto;
   left:0;
   right:0;
   border-radius: 10rpx;
 }
 .flex{
   
  display: flex;
  flex-wrap: wrap;
 }
 .checkItem{
   width:160rpx; 
   background: #efefef;
   border-radius: 10rpx;
   text-align: center;
   font-size: 24rpx;
   color:#000;
   padding:20rpx 0rpx;
   margin: 8rpx;
 }
 .checkItem image{
   display: block;
   margin:8rpx auto;
 }
 .checkItem view{
   width: 100%;
 }
 .bigGift{
   width:336rpx;
   height: 185rpx;
   display: flex;
   justify-content: center;
   align-items: center;
   background: #efefef;
   border-radius: 10rpx;
   margin:8rpx;
   font-size:24rpx;
   text-align: center;
 }
 .bigGift image{
   display: block;
   margin-left: 50rpx;
 }
 .button2{
  width:450rpx;
  height: 90rpx;
  text-align: center;
  line-height: 90rpx;
  color:#FFF;
  font-size: 26rpx;
  border-radius: 40rpx;
  background:linear-gradient(to right,rgb(254,46,41),rgb(255,128,26));
  margin:20rpx auto 0px auto; 
 }
 .checked{
  background: #fa982b;
  color:#FFF;
}